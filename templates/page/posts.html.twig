{% extends 'base.html.twig' %}

{% block title %}Posts
{% endblock %}

{% block body %}
	<div
		class="posts-div">
		{# pour chaque post, afficher les éléments ci-dessous #}
		{% for value in posts %}
			{% if value.ispublished %}
				<a href={{ path('app_post_id', {'id': value.id} ) }} class="posts-container d-flex flex-column align-items-center justify-content-center w-75 gap-3">
					<h4>{{value.title}}</h4>
					<img src={{value.image}} alt="" class="w-100">
					<p>
						{{value.content}}
					</p>
				</a>

			{% endif %}


		{% endfor %}
		<div class="navigation m-auto">
			<p class="navigation-pagination">{{ knp_pagination_render(posts) }}</p>
		</div>
	</div>
{% endblock %}